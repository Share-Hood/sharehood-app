<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:padding="20dp"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/imgViewListItemLendingIcon"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_download_black_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewListItemLendingNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Furadeira"
            android:textSize="20dp"
            android:textColor="@color/darkGray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtViewListItemLendingUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De: PafÃºncio Silveira"
            android:textSize="15dp"
            android:textColor="@color/lightGray" />

        <TextView
            android:id="@+id/txtViewListItemLendingDataEmprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desde: 02/02/2020"
            android:textSize="15dp"
            android:textColor="@color/lightGray"/>

        <TextView
            android:id="@+id/txtViewListItemLendingDataDevolucao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devolver: 02/02/2020"
            android:textSize="15dp"
            android:textColor="@color/lightGray"/>

    </LinearLayout>

</LinearLayout>